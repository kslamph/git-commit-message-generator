{
  "name": "onlyautocommit",
  "displayName": "Only Auto Commit",
  "description": "Generate Git commit messages, powered by local LLMs.",
  "version": "1.0.1",
  "publisher": "sunbankio",
  "pricing": "Free",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "onlyautocommit.generateCommitMessage",
        "title": "Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "onlyautocommit.setApiKey",
        "title": "Set API Key",
        "category": "Only Auto Commit"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "onlyautocommit.generateCommitMessage",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ],
      "scm/resourceGroup/context": [
        {
          "command": "onlyautocommit.generateCommitMessage",
          "when": "scmProvider == git",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Only Auto Commit",
      "properties": {
        "onlyautocommit.baseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "Base URL for the LLM API"
        },
        "onlyautocommit.modelId": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "Model ID to use for generating commit messages"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.5.4",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kslamph/git-commit-message-generator.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kslamph/git-commit-message-generator/issues"
  },
  "homepage": "https://github.com/kslamph/git-commit-message-generator#readme"
}